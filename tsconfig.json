{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "importHelpers": true,
        "lib": [
            "es2015",
            "dom"
        ],
        "types": [
            "node"
        ],
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "exclude": [
        "src/**/*.spec.ts",
        "bower_components",
        "node_modules"
    ],
    "angularCompilerOptions": {
        "genDir": ".",
        "skipMetadataEmit": true
    },
    "awesomeTypescriptLoaderOptions": {
        "useTranspileModule": true,
        "usePrecompiledFiles": true,
        "useWebpackText": true
    },
    "compileOnSave": false,
    "buildOnSave": false
}
